{
  "name": "firma",
  "description": "Company Website",
  "version": "2.0.0",
  "main": "gulpfile.js",
  "scripts": {
    "start": "@powershell -NoProfile -ExecutionPolicy Unrestricted -Command $env:NODE_ENV='development'; ./run/start.ps1",
    "build": "@powershell -NoProfile -ExecutionPolicy Unrestricted -Command $env:NODE_ENV='production'; ./run/build.ps1",
    "start.debug": "@powershell -NoProfile -ExecutionPolicy Unrestricted -Command $env:NODE_ENV='development'; $env:NODE_DEBUG='*'; ./run/start.ps1",
    "build.debug": "@powershell -NoProfile -ExecutionPolicy Unrestricted -Command $env:NODE_ENV='production'; $env:NODE_DEBUG='*'; ./run/build.ps1",
    "build.preview": "@powershell -NoProfile -ExecutionPolicy Unrestricted -Command $env:NODE_ENV='staging'; ./run/build.ps1",
    "build.preview.debug": "@powershell -NoProfile -ExecutionPolicy Unrestricted -Command $env:NODE_ENV='staging'; $env:NODE_DEBUG='*'; ./run/build.ps1",
    "clone": "@powershell -NoProfile -ExecutionPolicy Unrestricted -Command $env:APP_NAME='%npm_package_name%'; ./run/clone.ps1",
    "deploy": "@powershell -NoProfile -ExecutionPolicy Unrestricted -Command $env:NODE_ENV='production'; $env:APP_NAME='%npm_package_name%'; ./run/deploy.ps1",
    "deploy.full": "@powershell -NoProfile -ExecutionPolicy Unrestricted -Command $env:NODE_ENV='production'; $env:APP_NAME='%npm_package_name%'; ./run/deploy.ps1 -Full",
    "deploy.preview": "@powershell -NoProfile -ExecutionPolicy Unrestricted -Command $env:NODE_ENV='staging'; $env:APP_NAME='%npm_package_name%'; ./run/deploy.ps1",
    "deploy.preview.full": "@powershell -NoProfile -ExecutionPolicy Unrestricted -Command $env:NODE_ENV='staging'; $env:APP_NAME='%npm_package_name%'; ./run/deploy.ps1 -Full"
  },
  "browserslist": {
    "production": [
      "defaults"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "devDependencies": {
    "@vue/component-compiler-utils": "3.2.0",
    "browser-sync": "2.26.13",
    "del": "6.0.0",
    "eslint": "7.17.0",
    "eslint-config-standard": "16.0.2",
    "eslint-plugin-import": "2.22.1",
    "eslint-plugin-node": "11.1.0",
    "eslint-plugin-promise": "4.2.1",
    "eslint-plugin-standard": "5.0.0",
    "esm": "3.2.25",
    "gulp": "4.0.2",
    "gulp-autoprefixer": "7.0.1",
    "gulp-cache": "1.1.3",
    "gulp-concat": "2.6.1",
    "gulp-debug": "4.0.0",
    "gulp-favicons": "3.0.0",
    "gulp-if": "3.0.0",
    "gulp-imagemin": "7.1.0",
    "gulp-rename": "2.0.0",
    "gulp-sass": "4.1.0",
    "gulp-uglify-es": "2.0.0",
    "node-sass": "5.0.0",
    "parcel-bundler": "1.12.4",
    "stylelint": "13.8.0",
    "stylelint-order": "4.1.0",
    "stylelint-scss": "3.18.0",
    "vue-template-compiler": "2.6.12"
  },
  "dependencies": {
    "body-scroll-lock": "3.1.5",
    "headroom.js": "0.12.0",
    "jquery": "3.5.1"
  },
  "stylelint": {
    "extends": "./.stylelintrc",
    "ignoreFiles": [
      "dist/**",
      "backup/**"
    ]
  },
  "eslintConfig": {
    "env": {
      "browser": true
    },
    "extends": "eslint-config-standard",
    "rules": {
      "camelcase": "off",
      "no-unneeded-ternary": "off",
      "no-unused-vars": "off",
      "no-undef": "off",
      "spaced-comment": "off"
    }
  },
  "eslintIgnore": [
    "dist/**",
    "backup/**"
  ],
  "author": "Marian Schramm",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/mrnmrhcs/firma/issues"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/mrnmrhcs/firma.git"
  }
}
