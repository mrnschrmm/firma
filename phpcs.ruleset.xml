<?xml version="1.0"?>
<ruleset name="PHP Coding Standards">
  <description>Coding Standards for Flynt Theme</description>

  <exclude-pattern>*/node_modules/*</exclude-pattern>
  <exclude-pattern>./app/vendor/*</exclude-pattern>
  <exclude-pattern>./app/dist/*</exclude-pattern>
  <exclude-pattern>./app/snippets/**/index.php</exclude-pattern>
  <exclude-pattern>./app/templates/*.php</exclude-pattern>

  <file>.</file>

  <arg name="extensions" value="php"/>
  <arg name="colors"/>

  <!-- Show sniff codes in all reports -->
  <arg value="s"/>
  <!-- Exclude Warnings -->
  <arg value="n"/>

  <rule ref="PSR2"/>
</ruleset>
